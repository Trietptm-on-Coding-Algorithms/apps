<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_height="50dip" android:layout_width="300dp" android:gravity="center"
	android:layout_margin="1dip">
	<ImageView android:layout_gravity="center" android:id="@+id/imagenFoto"
		android:src="@drawable/no_imagen" android:layout_margin="1dip"
		android:padding="1dp" android:adjustViewBounds="true"
		android:layout_width="125dp" android:layout_height="125dp"></ImageView>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center"
		android:layout_margin="1dip">

	<ImageView android:layout_gravity="center" android:id="@+id/iconoCategoria"
		android:layout_margin="1dip"
		android:padding="1dp" android:adjustViewBounds="true"
		android:layout_width="32dp" android:layout_height="32dp"></ImageView>
		
		<TextView android:id="@+id/lugarNombre" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:textColor="@color/gris" android:textStyle="bold"
			android:paddingTop="1px" />

		<TextView android:id="@+id/lugarDescripcion"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="center" android:textStyle="bold" android:paddingTop="1px"
			android:textColor="@color/gris" />
	</LinearLayout>
</LinearLayout>
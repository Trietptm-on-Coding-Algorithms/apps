<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical" android:background="@drawable/fondo"
	android:scrollbarStyle="outsideOverlay" android:scrollbarThumbVertical="@drawable/list_selector_aux2"
	android:scrollbarSize="20dip" android:smoothScrollbar="true">



	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		


	<LinearLayout android:layout_gravity="center_horizontal"
		android:orientation="horizontal" android:layout_height="125dip"
		android:layout_marginLeft="20dip" android:layout_marginRight="10dip"
		android:layout_width="fill_parent">

		<Button android:layout_marginTop="20dip" android:textStyle="bold" android:layout_marginLeft="20dip"
			android:layout_gravity="center" android:layout_height="70dp"
			android:layout_width="100dip" android:id="@+id/botonExportar"
			android:drawableTop="@drawable/export" android:onClick="exportarDB"
			android:text="@string/exportar"></Button>
		<Button android:layout_marginTop="20dip"
			android:layout_marginLeft="20dip" android:layout_gravity="center"
			android:layout_height="70dp" android:id="@+id/botonImportar"
			android:layout_width="100dip" android:drawableTop="@drawable/export"
			android:textStyle="bold" android:onClick="importarDB" android:text="@string/importar"></Button>

	</LinearLayout>

	<LinearLayout android:layout_gravity="center_horizontal"
		android:orientation="horizontal" android:layout_height="125dip"
		android:layout_marginLeft="20dip" android:layout_marginRight="10dip"
		android:layout_width="fill_parent">

			
		<Button android:textStyle="bold" android:layout_marginLeft="20dip"
			android:layout_gravity="center" android:layout_height="50dp"
			android:layout_width="100dip" android:id="@+id/botonInfo"
			android:drawableTop="@drawable/info" android:onClick="info"
			></Button>
			
		<Button
			android:layout_marginLeft="20dip" android:layout_gravity="center"
			android:layout_height="50dp" android:id="@+id/botonImportar"
			android:layout_width="100dip" android:drawableTop="@drawable/reload"
			android:textStyle="bold" android:onClick="recargarLugares"></Button>

	</LinearLayout>
	</LinearLayout>


</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
      
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/linearLayoutLugaresRA"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="7dip"
    android:paddingBottom="7dip"
    android:background="@drawable/list_selector_aux"
    android:smoothScrollbar="true"
	android:scrollbarStyle="outsideOverlay"
	android:scrollbarThumbVertical="@drawable/list_selector_aux2"
	android:scrollbarSize="20dip">
       
	<TextView
	    	android:id="@+id/hidden_number"
	 		android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:visibility="gone"
		    />

	<ImageView 
		android:id="@+id/image"
		android:layout_marginLeft="10dip"
		android:layout_width="70dip"
	    android:layout_height="70dip"
	    android:paddingTop="10px"
	    android:maxWidth="100px"
	    android:maxHeight="80px"
	    /> 
	    
	<LinearLayout 
		android:layout_width="0dip" 
		android:layout_weight="1"
		android:layout_marginLeft="6dip"
		android:layout_marginRight="6dip"
		android:layout_height="wrap_content" 
		android:orientation="vertical"
		
		>
		    
		<TextView
	    	android:id="@+id/title"
	 		android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:textSize="18dip"
		    style="@style/Lugares"
		    android:textColor="#000000"
		    />
		    
		<TextView
	    	android:id="@+id/description"
	 		android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:textSize="14dip"
		    style="@style/Lugares"
		    android:textColor="#000000"
		    />
		    
		<TextView
	    	android:id="@+id/distance"
	 		android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:textSize="20dip"
		    style="@style/Lugares"
		    android:textColor="@color/azul"
		    />
	 </LinearLayout>
	 
</LinearLayout>

